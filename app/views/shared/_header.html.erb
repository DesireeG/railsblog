<header>

<div id="headerlink">
	<h3><%= link_to '#ThatMomentWhen..', root_path %></h3>
	</div>

<div id="greeting">
<% if current_user %>

				<p>Hello,  <%= current_user.username %> </p>
			<% else %>

			<p>Log In Or Sign Up!</p>

			<%end %>
			</div>
	<nav>

		<ul>
		
			<% if current_user %>

		

				<li><%= link_to 'Newsfeed', posts_path %></li>

				<li><%= link_to 'Post Something', new_post_path %></li>

				<li><%= link_to 'Edit Profile', edit_profile_path %></li>
			
				<li><%= link_to 'Logout', logout_path,
				 method: :delete %></li>

			<% else %>
			
				<li><%= link_to 'Signin', login_path %></li>
				<li><%= link_to 'Sign up', new_user_path %></li>
			<% end %>
		</ul>
	</nav>
</header>